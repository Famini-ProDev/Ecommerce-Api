{
  "info": {
    "name": "Ecommerce API",
    "_postman_id": "ecommerce-api-collection-001",
    "description": "Full Ecommerce API with Users, Auth, Products, Categories, Cart, Orders.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },

  "item": [
    {
      "name": "Auth / Users",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n \"name\": \"John Doe\",\n \"email\": \"john@example.com\",\n \"password\": \"123456\" \n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/register",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "register"]
            }
          }
        },

        {
          "name": "Login",
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n \"email\": \"john@example.com\",\n \"password\": \"123456\" \n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/login",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "login"]
            }
          }
        },

        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{ \"token\": \"{{refreshToken}}\" }"
            },
            "url": {
              "raw": "{{base_url}}/api/users/token",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "token"]
            }
          }
        },

        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{ \"token\": \"{{refreshToken}}\" }"
            },
            "url": {
              "raw": "{{base_url}}/api/users/logout",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "logout"]
            }
          }
        },

        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/users/me",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "me"]
            }
          }
        },

        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"name\": \"New Name\" }"
            },
            "url": {
              "raw": "{{base_url}}/api/users/me",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "me"]
            }
          }
        },

        {
          "name": "Get Users (Admin)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/users?page=1&pageSize=10",
              "host": ["{{base_url}}"],
              "path": ["api", "users"]
            }
          }
        }
      ]
    },

    {
      "name": "Products",
      "item": [
        {
          "name": "Create Product (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n \"name\": \"Product A\",\n \"price\": 120,\n \"category\": \"{{categoryId}}\",\n \"stock\": 50\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/products",
              "host": ["{{base_url}}"],
              "path": ["api", "products"]
            }
          }
